<h2>{{message}}</h2>
<form method="post" id="addForm">
    <fieldset>
        <legend>Player Info:</legend>
        <p>
            <label for="player_id">Player ID:</label>
            <input type="number" min=1 max=9999999999 class="required" name="player_id" id="player_id" title="player_id should be numeric">
        </p>
        <p>
            <label for="Name">Player Name:</label>
            <input type="text" class="required" name="name" id="name">
        </p>
        <p>
            <label for="Years">Years Active:</label>
            <input type="text" class="required" name="year" id="year">
    </fieldset>

    <p>
        <input type="submit" value="Submit" />
        <input type="reset" value="Clear Form" />
    </p>
</form>
<script type="text/javascript" src="/assets/verify-input.js"></script>
